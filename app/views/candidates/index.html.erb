<h1 class="underline decoration-pink-500">Hi</h1>

<%= link_to "Add Candidate", new_candidate_path %>

<table class="underline decoration-pink-500">
  <tr>
    <td></td>
    <td>Vote</td>
    <td>Name</td>
    <td>Party</td>
    <td>Age</td>
    <td>Action</td>
  </tr>

  <% @candidates.each do |candidate| %>
  <tr>
    <td class="underline decoration-pink-500">
      <%= link_to "123", vote_candidate_path(candidate.id), method: 'post' %>
    </td>
    <td><%= candidate.vote_logs.size %></td>
    <td><%= link_to candidate.name, candidate_path(candidate.id) %></td>
    <td><%= candidate.party %></td>
    <td><%= candidate.age %></td>
    <td><%= link_to 'update', edit_candidate_path(candidate.id) %></td>
    <td>
      <%= link_to 'delete', candidate_path(candidate.id) ,method: 'delete',
      data: {confirm: 'Are you sure?'} %>
    </td>
  </tr>
  <% end %>
</table>
